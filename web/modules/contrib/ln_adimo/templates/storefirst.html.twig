{#
/**
 * @file
 * Template file for adimo module.
 */
#}
{% set data_cookie_consent= cookieconsent ? "false" : "true" %}
{% if touchpointId is not empty %}

  {{ attach_library('ln_adimo/storefirst') }}
  {{ attach_library('ln_adimo/adimo-cookie-consent') }}

  <!-- To be placed where you would like the button to appear -->
  {% if customButtonHTML is not empty %}
    <button class="adimo-store-first-button"
            data-adimo="store-first" data-type="lightbox"
            data-disable-css="false"
            data-touchpoint-identifier="{{ touchpointId }}"
            data-do-not-track="false"
            onclick="window.Adimo.setLanguage('{{ language }}');">{{ customButtonHTML|raw }}
    </button>
  {% else %}
    <button class="adimo-store-first-button"
            data-adimo="store-first" data-type="lightbox"
            data-disable-css="false"
            data-touchpoint-identifier="{{ touchpointId }}"
            data-do-not-track="false"
            onclick="window.Adimo.setLanguage('{{ language }}');">{{ 'Add to basket'|t }}
    </button>
  {% endif %}

  {% if customCSS is not empty %}
    <style>{{ customCSS }}</style>
  {% endif %}
{% endif %}
