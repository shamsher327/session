{#
/**
 * @file
 * Template file for adimo module.
 */
#}
{% set data_cookie_consent= cookieconsent ? "false" : "true" %}
{% if touchpointId is not empty %}

  {{ attach_library('ln_adimo/multitouchpoint') }}
  {{ attach_library('ln_adimo/adimo-cookie-consent') }}

  <!-- To be placed where you would like the button to appear -->
  {% if customButtonHTML is not empty %}
    <button class="adimo-multi-touchpoint" data-type="multi-touchpoint-lightbox"
            data-static-touchpoint-identifiers="{{ touchpointId }}"
            data-do-not-track="false"
            onclick="window.Adimo.setLanguage('{{ language }}');">{{ customButtonHTML|raw }}</button>
  {% else %}
    <button class="adimo-multi-touchpoint" data-type="multi-touchpoint-lightbox"
            data-static-touchpoint-identifiers="{{ touchpointId }}"
            data-do-not-track="false">
      <span class="button-text"
            onclick="window.Adimo.setLanguage('{{ language }}');">{{ 'Buy Now'|t }}</span>
    </button>
  {% endif %}


  {% if customCSS is not empty %}
    <style>{{ customCSS }}</style>
  {% endif %}
{% endif %}
